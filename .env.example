# Configuration pour l'agent IMT

# ================================
# API Keys LLM (Obligatoire)
# ================================
GEMINI_API_KEY=votre_cle_api_gemini_ici
# Alternative: GOOGLE_API_KEY=votre_cle_api_google_ici

# Grok xAI (optionnel - alternative à Gemini)
GROK_API_KEY=votre_cle_grok_ici

# OpenAI (optionnel - fallback si Gemini/Grok épuisés)
OPENAI_API_KEY=votre_cle_openai_ici

# ================================
# Configuration Agent
# ================================
# Choisir quel agent utiliser:
# - true: Agent LangChain ReAct (temporairement désactivé - API v1.x)
# - false: Agent classique avec heuristiques (ACTUEL)
USE_LANGCHAIN_AGENT=false

# ================================
# Observabilité - Langfuse (Optionnel mais recommandé)
# ================================
# Pour activer le monitoring des appels LLM
# 1. Créer un compte sur https://cloud.langfuse.com
# 2. Récupérer les clés API (Settings → API Keys)
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxxxxxxxxxxxxxxxxxxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxxxxxxxxxxxxxxxxxxxxx
LANGFUSE_HOST=https://cloud.langfuse.com

# ================================
# Configuration Email (pour envoi réel)
# ================================
EMAIL_USER=votre_email@gmail.com
EMAIL_PASS=votre_mot_de_passe_application
EMAIL_TO=directeur@imt.sn
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ================================
# Configuration Redis
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379

